Patch "Always Unlocked Spin Dash" in "Cheats/Skills" by "Hyper" 
{
    // Unlock various components of Spin Dash.
    WriteAsmHook
    (
        $@"
            mov al, 1
            ret
        ",

        /* 0x140AFC580 */
        ScanSignature
        (
            "\x48\x8B\x41\x08\xF6\x40\x4C\x06",
            "xxxxxxxx"
        ),

        HookBehavior.Replace
    );

    // Force Spin Dash bitflag check to always pass.
    WriteAsmHook
    (
        $@"
            cmp   edx, 0x3E
            jne   exit
            mov   al, 1
            ret
        exit:
            mov   eax, edx
            and   eax, 0x3F
            movzx r8d, al
            mov   eax, edx
            shr   rax, 6
        ",

        /* 0x140884C10 */
        ScanSignature
        (
            "\x8B\xC2\x83\xE0\x3F\x44\x0F\xB6\xC0\x8B\xC2\x48\xC1\xE8\x06\x48\x8B\x44\xC1\x28",
            "xxxxxxxxxxxxxxxxxxxx"
        ),

        HookBehavior.Replace
    );
}